<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.blackTitle {
			background-color: #0F0F0F;
			width: 100%;
			min-width: 900px;
			height: 50px;
			vertical-align: middle;
		}

		.welcome {
			color: #F0F0F0;
			font-size: 24px;
			vertical-align: middle;
			padding: 0px;
			margin: 10px;
		}
		.mainSlot {
			background-color: rgb(90, 96, 102);
			width: 100%;
			height: 100%;
			margin: 0;
			padding: 0px;
		}

		.mainDock {
			background-color: red;
			width: 100%;
			height: 100%;
		}

	</ui:style>

	<g:DockLayoutPanel ui:field="mainDockPanel" styleName="{style.mainDock}">
		<g:north size="50">
			<g:SimplePanel styleName="{style.blackTitle}">
				<g:HorizontalPanel>
					<g:HTMLPanel styleName="{style.welcome}">Express Point</g:HTMLPanel>
					<g:HorizontalPanel>
						<g:HTMLPanel styleName="{style.welcome}">DashStatus</g:HTMLPanel>
						<g:HTMLPanel ui:field="dashboardstatus" styleName="{style.welcome}"></g:HTMLPanel>
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:SimplePanel>
		</g:north>
		<g:north size="50">
			<g:SimplePanel>
				<g:HorizontalPanel ui:field="menuMain">
					<g:Button ui:field="beep">Beep</g:Button>
				</g:HorizontalPanel>
			</g:SimplePanel>
		</g:north>
		<g:center>
			<g:FlowPanel ui:field="flows" width="100%" height="100%"></g:FlowPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
